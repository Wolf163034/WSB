def remove_odd_index_characters(string):
    # Initialize an empty string to store characters with even indices
    result = ""

    # Iterate over the characters in the string
    for i in range(len(string)):
        # Check if the index is even (indices start from 0)
        if i % 2 == 0:
            # Append the character to the result string
            result += string[i]

    return result

# Example usage:
input_string = "Hello World"
result = remove_odd_index_characters(input_string)
print("Original string:", input_string)
print("String after removing characters with odd index values:", result)
