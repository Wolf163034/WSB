def modify_string(string):
    # Check if the string length is less than 3
    if len(string) < 3:
        return string
    # Check if the string already ends with 'ing'
    elif string.endswith('ing'):
        return string + 'ly'
    else:
        return string + 'ing'

# Example usage:
sample_strings = ['abc', 'string', 'run']

for string in sample_strings:
    print("Sample String:", string)
    print("Expected Result:", modify_string(string))
