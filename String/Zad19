def insert_string_middle(original_str, insert_str):
    # Calculate the midpoint index of the original string
    mid_index = len(original_str) // 2

    # Insert the string in the middle of the original string
    new_str = original_str[:mid_index] + insert_str + original_str[mid_index:]

    return new_str

# Example usage:
print(insert_string_middle('[[]]<<>>', 'Python'))  # Output: [[Python]]
print(insert_string_middle('{{}}', 'PHP'))        # Output: {{PHP}}
