def get_first_and_last_two(string):
    # Check if the string length is less than 2
    if len(string) < 2:
        return ''
    else:
        # Get the first 2 and last 2 characters using slicing
        result = string[:2] + string[-2:]
        return result

# Example usage:
sample_strings = ['w3resource', 'w3', ' w']

for string in sample_strings:
    print(f"Sample String: '{string}'")
    print("Expected Result:", get_first_and_last_two(string))
