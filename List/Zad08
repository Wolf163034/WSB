def is_list_empty(lst):
    # Check if the length of the list is zero
    if len(lst) == 0:
        return True
    else:
        return False

# Example usage:
empty_list = []
non_empty_list = [1, 2, 3]

print("Is the empty list empty?", is_list_empty(empty_list))
print("Is the non-empty list empty?", is_list_empty(non_empty_list))
